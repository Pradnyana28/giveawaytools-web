{
  "name": "dafis-nodejs-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "copy": "cp-cli src/resources/lang dist/resources/lang && cp-cli src/resources/views dist/resources/views",
    "start": "npm run build && npm run copy && ts-node --files ./src/app.ts",
    "start:watch": "nodemon",
    "start:production": "node dist/app",
    "db:seed": "node -r ts-node/register ./src/database/seed.ts",
    "mix": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js --watch",
    "prod": "npm run production",
    "production": "rm -rf dist && npm run build && npm run copy && npm run mix",
    "up": "pm2 start dist/app.js --name 'web-app'",
    "test": "npm run build && npm run copy && cross-env TS_NODE_FILES=true mocha -r ts-node/register src/tests/**/*.test.ts --timeout 30000 --exit",
    "coverage": "nyc npm run test",
    "coverage:json": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "author": "I Kadek Pradnyana <kadek.pradnyana@gmail.com>",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts",
    "delay": "2500"
  },
  "_moduleAliases": {
    "@app": "dist/app",
    "@models": "dist/app/Models",
    "@controllers": "dist/app/Controllers",
    "@bootstrap": "dist/bootstrap",
    "@resources": "dist/resources",
    "@utils": "dist/utils",
    "@routes": "dist/routes"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "busboy": "^0.3.1",
    "chalk": "^4.0.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "email-templates": "^7.0.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.1",
    "faker": "^4.1.0",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "i18n": "^0.9.1",
    "laravel-mix": "^5.0.4",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.9",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^2.0.4",
    "puppeteer": "^10.2.0",
    "redis": "^3.0.2",
    "route-cache": "^0.4.4",
    "striptags": "^3.1.1",
    "tailwindcss": "^1.4.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/connect-flash": "0.0.35",
    "@types/csurf": "^1.9.36",
    "@types/email-templates": "^7.0.1",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/express-validator": "^3.0.0",
    "@types/i18n": "^0.8.6",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.12",
    "@types/node": "^13.13.1",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "copy-webpack-plugin": "^5.1.1",
    "cp-cli": "^2.0.0",
    "cross-env": "^7.0.2",
    "feather-icons": "^4.28.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "jquery": "^3.5.1",
    "laravel-mix-imagemin": "^1.0.3",
    "medium-editor": "^5.23.3",
    "mocha": "^7.1.2",
    "node-mocks-http": "^1.8.1",
    "nodemailer-mock-transport": "^1.3.0",
    "nyc": "^15.0.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "supertest": "^4.0.2",
    "vue-template-compiler": "^2.6.11"
  }
}
