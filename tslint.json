{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "no-submodule-imports": [
            true,
            "source-map-support",
            "@app",
            "@models",
            "@controllers",
            "@bootstrap",
            "@resources",
            "@utils",
            "@routes"
        ],
        "no-implicit-dependencies": [true, "dev", ["@app", "@models", "@controllers", "@bootstrap", "@resources", "@utils", "@routes"]],
        "no-boolean-literal-compare": false
    },
    "rulesDirectory": []
}
